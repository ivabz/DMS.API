
@model DMS.API.Models.APIDocModel

@{
    ViewBag.Title = "Help";
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryui")
    <script type="text/javascript">
        // Apply jQuery accordion widget.
        $(function () { $(".accordion").accordion(); });
        </script>
}

<div id="body" class="content-wrapper">
<h2>API Help</h2>

@foreach (var group in Model.GetApis())
{
    <h3>@group.Key</h3>

    <div class="accordion">
    @foreach (var api in group)
    {
        <h4><a href="#">Method  @api.RelativePath</a></h4>
        <div>
        @foreach (var param in api.ParameterDescriptions)
        {
            <p>Parameter: <em>@param.Name</em> (@param.Source)</p>
        }
        </div>
    }
    </div>
}
</div>

